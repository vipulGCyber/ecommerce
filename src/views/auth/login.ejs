<!-- PAGE HEADER -->
<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-box-arrow-in-right"></i> Sign In</h1>
    <p class="text-white-50">Welcome back to ShopHub</p>
  </div>
</div>

<!-- LOGIN FORM -->
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card shadow-lg fade-in">
        <div class="card-body p-5">
          <h3 class="card-title mb-4 text-center"><i class="bi bi-person-circle"></i> Login</h3>
          
          <form id="loginForm">
            <div class="mb-3">
              <label for="email" class="form-label"><i class="bi bi-envelope"></i> Email Address</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
              <small class="form-text text-muted">Demo: admin@ecommerce.com</small>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label"><i class="bi bi-lock"></i> Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
              <small class="form-text text-muted">Demo: admin123456</small>
            </div>

            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
              <label class="form-check-label" for="rememberMe">
                Remember me
              </label>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg mb-3" id="loginBtn">
              <i class="bi bi-box-arrow-in-right"></i> Sign In
            </button>
          </form>

          <hr>

          <p class="text-center mb-0">
            Don't have an account? 
            <a href="/register" class="text-decoration-none"><strong>Create one now</strong></a>
          </p>
        </div>
      </div>

      <!-- INFO CARD -->
      <div class="card mt-3 border-info">
        <div class="card-body">
          <h6 class="card-title"><i class="bi bi-info-circle"></i> Demo Credentials</h6>
          <small class="text-muted">
            <p><strong>Admin:</strong><br>Email: admin@ecommerce.com<br>Password: admin123456</p>
            <p><strong>Customer:</strong><br>Email: customer@ecommerce.com<br>Password: customer123456</p>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
