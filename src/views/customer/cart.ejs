<!-- PAGE HEADER -->
<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-cart-check"></i> Shopping Cart</h1>
    <p class="text-white-50">Review and manage your items</p>
  </div>
</div>

<!-- EMPTY CART MESSAGE -->
<div class="container my-4">
  <div id="emptyCartMessage" class="alert alert-info fade-in" style="display: none;">
    <h4 class="alert-heading"><i class="bi bi-bag"></i> Your cart is empty</h4>
    <p>Start shopping to add items to your cart</p>
    <a href="/products" class="btn btn-primary"><i class="bi bi-shop"></i> Continue Shopping</a>
  </div>
</div>

<!-- CART ITEMS -->
<div class="container my-4">
  <div class="row">
    <div class="col-lg-8">
      <div id="cartItemsContainer" class="fade-in">
        <!-- Cart items will be loaded here -->
        <div class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      </div>
    </div>

    <!-- ORDER SUMMARY -->
    <div class="col-lg-4">
      <div class="cart-summary fade-in">
        <h3><i class="bi bi-receipt"></i> Order Summary</h3>
        
        <div class="summary-row">
          <span>Subtotal:</span>
          <span>$<span id="subtotal">0.00</span></span>
        </div>
        
        <div class="summary-row">
          <span>Tax (10%):</span>
          <span>$<span id="tax">0.00</span></span>
        </div>
        
        <div class="summary-row">
          <span>Shipping:</span>
          <span class="badge badge-success">FREE</span>
        </div>
        
        <div class="summary-row total">
          <span>Total:</span>
          <span>$<span id="total">0.00</span></span>
        </div>

        <button class="btn btn-primary w-100 mt-3 btn-lg" id="checkoutBtn">
          <i class="bi bi-credit-card"></i> Proceed to Checkout
        </button>
        
        <a href="/products" class="btn btn-secondary w-100 mt-2">
          <i class="bi bi-arrow-left"></i> Continue Shopping
        </a>

        <div class="alert alert-success mt-3" role="alert">
          <small><i class="bi bi-check-circle"></i> Free shipping on all orders!</small>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Checkout
document.addEventListener('DOMContentLoaded', () => {
  const checkoutBtn = document.getElementById('checkoutBtn');
  if (checkoutBtn) {
    checkoutBtn.addEventListener('click', () => {
      const total = document.getElementById('total').textContent;
      if (total === '0.00') {
        showAlert('Your cart is empty', 'warning');
      } else {
        showAlert('Proceeding to checkout...', 'info', 2000);
        setTimeout(() => {
          // In a real application, this would navigate to checkout page
          window.location.href = '/checkout';
        }, 2000);
      }
    });
  }
  loadCart();
});
</script>
