<h2 class="mb-4">Shopping Cart</h2>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="cartItems">
      <!-- Cart items will be loaded here -->
    </tbody>
  </table>
</div>

<div class="row mt-4">
  <div class="col-md-8"></div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Order Summary</h5>
        <p>Subtotal: <strong id="subtotal">$0</strong></p>
        <p>Shipping: <strong id="shipping">$0</strong></p>
        <p>Tax: <strong id="tax">$0</strong></p>
        <hr>
        <h5>Total: <strong id="total">$0</strong></h5>
        <button class="btn btn-primary w-100 mt-3">Proceed to Checkout</button>
      </div>
    </div>
  </div>
</div>
