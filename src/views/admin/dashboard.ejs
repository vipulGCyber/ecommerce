<!-- PAGE HEADER -->
<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-speedometer2"></i> Admin Dashboard</h1>
    <p class="text-white-50">Welcome back! Here's your business overview</p>
  </div>
</div>

<!-- STATISTICS CARDS -->
<div class="container my-4">
  <div class="row mb-4">
    <div class="col-md-3 mb-3">
      <div class="stat-card fade-in">
        <i class="bi bi-people-fill" style="font-size: 2rem; color: #667eea;"></i>
        <div class="stat-label">Total Customers</div>
        <div class="stat-value" id="totalCustomers">0</div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="stat-card fade-in">
        <i class="bi bi-box-seam" style="font-size: 2rem; color: #28a745;"></i>
        <div class="stat-label">Total Products</div>
        <div class="stat-value" id="totalProducts">0</div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="stat-card fade-in">
        <i class="bi bi-receipt" style="font-size: 2rem; color: #ffc107;"></i>
        <div class="stat-label">Total Orders</div>
        <div class="stat-value" id="totalOrders">0</div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="stat-card fade-in">
        <i class="bi bi-currency-dollar" style="font-size: 2rem; color: #dc3545;"></i>
        <div class="stat-label">Total Revenue</div>
        <div class="stat-value" id="totalRevenue">$0</div>
      </div>
    </div>
  </div>

  <!-- RECENT ORDERS & ACTIONS -->
  <div class="row mt-4">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-list-check"></i> Recent Orders</h5>
        </div>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead>
              <tr>
                <th>Order #</th>
                <th>Customer</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody id="recentOrdersTable">
              <tr>
                <td colspan="5" class="text-center py-3">
                  <div class="spinner-border spinner-border-sm text-primary"></div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- QUICK ACTIONS -->
    <div class="col-lg-4">
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-lightning-fill"></i> Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <a href="/admin/products" class="btn btn-outline-primary btn-lg">
              <i class="bi bi-box"></i> Manage Products
            </a>
            <a href="/admin/orders" class="btn btn-outline-primary btn-lg">
              <i class="bi bi-receipt"></i> Manage Orders
            </a>
            <a href="/admin/customers" class="btn btn-outline-primary btn-lg">
              <i class="bi bi-people"></i> Manage Customers
            </a>
            <a href="/admin/analytics" class="btn btn-outline-primary btn-lg">
              <i class="bi bi-graph-up"></i> View Analytics
            </a>
          </div>
        </div>
      </div>

      <!-- SYSTEM STATUS -->
      <div class="card shadow-sm mt-3">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-heart-pulse"></i> System Status</h5>
        </div>
        <div class="card-body">
          <div class="mb-2">
            <small class="text-muted">Database</small>
            <div class="badge bg-success">Connected</div>
          </div>
          <div class="mb-2">
            <small class="text-muted">API Server</small>
            <div class="badge bg-success">Running</div>
          </div>
          <div class="mb-2">
            <small class="text-muted">Last Updated</small>
            <div class="text-muted small">Just now</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Load dashboard data
document.addEventListener('DOMContentLoaded', () => {
  loadAdminDashboard();
  loadAdminOrders();
});
</script>
</div>
